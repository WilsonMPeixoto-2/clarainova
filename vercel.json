{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "knowledge-base/**",
          "server/**",
          "shared/**",
          "drizzle/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/trpc/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}